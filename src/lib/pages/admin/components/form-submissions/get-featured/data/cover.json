        {
          "id": "workPhotos",
          "name": "workPhotos",
          "type": "file-upload",
          "label": "3 Photos Of Your Work",
          "required": true,
          "order": 2,
          "validation": {
            "minFiles": 3,
            "maxFiles": 5,
            "maxSize": 100,
